<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:id="@+id/per">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/linearLayout">
    <ImageButton
        android:id="@+id/userPhoto1"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:background="@drawable/gggg"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/userName1"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="HelloWorld"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to nice news!"
        android:layout_gravity="center"/>
</LinearLayout>

    <Button
        android:text="@string/pinglun"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@color/white"
        android:layout_marginTop="249dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/yejianmoshi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:background="@color/white"
        android:layout_marginTop="368dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/lixianxiazai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:background="@color/white"
        android:layout_marginTop="319dp"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/shoucang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fbutton6"
        android:background="@color/white"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:text="@string/fankui"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:background="@color/white"
        android:layout_marginTop="417dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
